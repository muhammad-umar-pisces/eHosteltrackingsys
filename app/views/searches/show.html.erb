<style>
	.img{
  width:100px;
  height:100px;
}
</style>
<h1>Search Results</h1>
<% if @search.search_hostels.empty? %>
<div class="alert alert-danger" role="alert">
  No record found
</div>
<% else %>
<% @search.search_hostels.each do |f| %>
<br>

	 <%= image_tag(f.images.first, class: 'img img-responsive') if f.images.attached? %>
	
	 
	<%= f.location %>
	<%= f.description %>
	<%= f.hostel_type %>
	<%= f.price %>
<% end %>
<% end %>