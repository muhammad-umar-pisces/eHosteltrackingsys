<%= link_to 'New Hostel', new_hostel_path %><br><br><br><br>

<div class="container" style="width: 100%;">
  <% current_user.hostels.each do |hostel| %>
<div class="row" style="width: 100%;">
    <div class="col-md-6 content" style="border: 1px solid;padding: 1%;width: 80%;">
      <span><strong>Hostel Name:</strong></span>
        <%= hostel.hostel_name %><br>
        <span><strong>Hostel Location:</strong></span>
         <%= hostel.location %><br>
        <span><strong>Hostel Price:</strong></span>
        <%= hostel.price %>
        <%= image_tag hostel.images.first, class: "img-responsive float-right"%>
        <br>
         <%= link_to 'show more', hostel %>
        <br><br>
        <hr>
    </div>
    </div>
 <% end %>
 </div>

