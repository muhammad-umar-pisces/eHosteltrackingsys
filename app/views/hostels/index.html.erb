<style type="text/css">
  hr{ 
  height: 1px;
  color: red;
  background-color: #679b9b;
  border: none;
};
.map-div{
  justify-content: right;
  border: 1px solid;
  width: 30%;
  height: auto;
};
</style>
<%= link_to 'New Hostel', new_hostel_path %><br><br><br><br>

<div class="container" >
  <% current_user.hostels.each do |hostel| %>
<div class="row" >
    <div class="col-md-6 content">
      <span><strong>Hostel Name:</strong></span>
        <%= hostel.hostel_name %><br>
        <span><strong>Hostel Location:</strong></span>
         <%= hostel.location %><br>
        <span><strong>Hostel Price:</strong></span>
        <%= hostel.price %>
        <%= image_tag hostel.images.first, class: "img-responsive float-right"%>
        <br>
         <%= link_to 'show more', hostel, :class => "btn btn-info" %>
        <br><br>
        <hr>
    </div>
    </div>
 <% end %>
 </div>
